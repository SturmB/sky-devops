version: "3.8"

services:

  # HAProxy load balancer
  balancer:
    image: haproxy
    container_name: balancer
    restart: unless-stopped
    volumes:
      - "{{ config_dir }}/haproxy:/usr/local/etc/haproxy:ro"
    networks:
      - web
    ports:
      - "80:80"
      - "443:443"
      - "1936:1936"
    # depends_on:
    #   - schedule
    #   - acs
    #   - ays

  # Sky Schedule app (Apache & PHP services with Laravel)
  schedule:
    image: "sturmb/sky-schedule"
    container_name: schedule
    restart: unless-stopped
    working_dir: /var/www/html
    volumes:
      - /mnt/jobs_main:/mnt/jobs_main
    #  - /mnt/jobs_archive_01:/mnt/jobs_archive_01
      - /mnt/orders:/mnt/orders
    depends_on:
      - schedule-db
    ports:
      - "8081:80"
      - "4543:443"
    networks:
      - web

  # American Cabin Supply site (Apache & PHP services with Laravel)
  acs:
    image: "sturmb/sky-acs"
    container_name: acs
    restart: unless-stopped
    working_dir: /var/www/html
    depends_on:
      - acsays-db
    ports:
      - "8082:80"
      - "4544:443"
    networks:
      - web

  # American Yacht Supply site (Apache & PHP services with Laravel)
  ays:
    image: "sturmb/sky-ays"
    container_name: ays
    restart: unless-stopped
    working_dir: /var/www/html
    depends_on:
      - acsays-db
    ports:
      - "8083:80"
      - "4545:443"
    networks:
      - web

  # American Accents site (Apache & PHP services)
  aa:
    image: "sturmb/sky-aa"
    container_name: aa
    restart: unless-stopped
    working_dir: /var/www/html
    ports:
      - "8080:80"
      - "4443:443"
    networks:
      - web

  # MySQL Service for the Sky Schedule database
  schedule-db:
    image: mysql
    container_name: schedule-db
    restart: unless-stopped
    ports:
      - "3306:3306"
    environment:
      MYSQL_RANDOM_ROOT_PASSWORD: "yes"
      MYSQL_ONETIME_PASSWORD: "yes"
    volumes:
      - schedule-dbdata:/var/lib/mysql
    networks:
      - web

  # MySQL Service for the ACS and AYS sites' databases
  acsays-db:
    image: mysql
    container_name: acsays-db
    restart: unless-stopped
    ports:
      - "3326:3306"
    environment:
      MYSQL_RANDOM_ROOT_PASSWORD: "yes"
      MYSQL_ONETIME_PASSWORD: "yes"
    volumes:
      - acsays-dbdata:/var/lib/mysql
    networks:
      - web

  # Redis Service
  redis:
    image: redis
    container_name: redis
    restart: unless-stopped
    ports:
      - "6379:6379"
    volumes:
      - redis-data:/data
    networks:
      - web

  # SqlBak Service for ACS & AYS
  sqlbak-acsays:
    image: pranasnet/sqlbak
    container_name: sqlbak-acsays
    restart: unless-stopped
    environment:
      sqlbak_key: "{{ sqlbak_key }}"
      sqlbak_name: acsays
      host: acsays-db
      db_type: mysql
      user: "{{ db_admin_username }}"
      password: "{{ db_admin_password }}"
    volumes:
      - sqlbak_data:/opt/sqlbak
    networks:
      - web

  # SqlBak Service for Sky Schedule
  sqlbak-schedule:
    image: pranasnet/sqlbak
    container_name: sqlbak-schedule
    restart: unless-stopped
    environment:
      sqlbak_key: "{{ sqlbak_key }}"
      sqlbak_name: schedule
      host: schedule-db
      db_type: mysql
      user: "{{ db_admin_username }}"
      password: "{{ db_admin_password }}"
    volumes:
      - sqlbak_data:/opt/sqlbak
    networks:
      - web

# Docker Networks
networks:
  web:
    driver: bridge
    name: web

# Volumes
volumes:
  acsays-dbdata:
    driver: local
    name: acsays-dbdata
  schedule-dbdata:
    driver: local
    name: schedule-dbdata
  redis-data:
    driver: local
    name: redis-data
  sqlbak_data:
    driver: local
    name: sqlbak-data
